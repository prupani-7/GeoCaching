<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Geocachingapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:progressBackgroundTint">@color/colorBackground</item>
        <item name="actionBarTheme">@style/ExampleAppBar</item>
    </style>

    <style name="ExampleAppBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="colorSurface">@color/actionBarColor</item>
        <item name="android:elevation">12dp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Theme.Geocachingapp" parent="Base.Theme.Geocachingapp" />
